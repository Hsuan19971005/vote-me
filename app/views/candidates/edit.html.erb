<h1>Edit</h1>
<% if @candidate.errors.full_messages %>
  <ul>
    <%  @candidate.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @candidate do |form| %>
  <div>
    <%= form.label :name, "名字" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :party, "政黨" %>
    <%= form.text_field :party %>
  </div>
  <div>
    <%= form.label :age, "年齡" %>
    <%= form.number_field :age, min: 1, max: 99 , value:30%>
  </div>
  <div>
    <%= form.label :politics, "政見" %>
    <%= form.text_area :politics %>
  </div>
  <%= form.submit %>
<% end %>
